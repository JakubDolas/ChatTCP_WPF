<Window x:Class="Menu.NickNameLobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Menu"
        mc:Ignorable="d"
        Title="NickNameLobby" Height="350" Width="400"
        Icon="/Images/Logo.ico">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="380" FontSize="24" FontWeight="Bold" TextAlignment="Center" FontFamily="Segoe UI Variable Display"><Run Language="pl-pl" Text="ENTER YOUR NICKNAME"/></TextBlock>
        <TextBox x:Name="NickNameSpace" HorizontalAlignment="Center" Margin="0,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="45" FontSize="20" TextChanged="NickNameSpace_TextChanged" TextAlignment="Center" FontWeight="Bold" FontFamily="Segoe UI Variable Display"/>
        <Button x:Name="EnterButton" Content="ENTER" HorizontalAlignment="Center" Margin="0,210,0,0" VerticalAlignment="Top" Height="48" Width="94" FontSize="18" FontWeight="Bold" Click="EnterButton_Click" FontFamily="Segoe UI Variable Display"/>
    </Grid>
</Window>
